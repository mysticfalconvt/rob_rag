generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model IndexedFile {
  id           String   @id @default(uuid())
  filePath     String   @unique
  fileHash     String
  lastModified DateTime
  lastIndexed  DateTime @default(now())
  chunkCount   Int
  status       String   @default("indexed") // indexed, pending, error

  // Source tracking
  source String @default("local") // "local" | "paperless"

  // Paperless-ngx specific fields
  paperlessId            Int?
  paperlessTitle         String?
  paperlessTags          String? // JSON array of tags
  paperlessCorrespondent String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Conversation {
  id        String    @id @default(uuid())
  title     String
  topics    String?   // JSON array of conversation topics
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String // 'user' | 'assistant'
  content        String
  sources        String? // JSON string of sources
  createdAt      DateTime     @default(now())

  @@index([conversationId])
}

model Settings {
  id                      String @id @default("singleton")
  embeddingModel          String
  chatModel               String
  embeddingModelDimension Int    @default(1024)

  // Paperless-ngx Configuration
  paperlessUrl         String?
  paperlessExternalUrl String? // Optional external URL for browser links
  paperlessApiToken    String?
  paperlessEnabled     Boolean @default(false)

  // Customizable Prompts
  ragSystemPrompt          String?
  noSourcesSystemPrompt    String?
  titleGenerationPrompt    String?

  // User Profile (for chat context)
  userName        String?
  userBio         String? // Background, interests, role, etc.
  userPreferences String? // JSON object for other preferences

  // Context Window Management
  maxContextTokens      Int     @default(8000) // Maximum tokens to use for context
  contextStrategy       String  @default("smart") // "sliding" | "token" | "smart"
  slidingWindowSize     Int     @default(10) // Number of recent messages to keep
  enableContextSummary  Boolean @default(true) // Whether to summarize old messages

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  goodreadsSources GoodreadsSource[]
  goodreadsBooks   GoodreadsBook[]
}

model GoodreadsSource {
  id           String    @id @default(uuid())
  userId       String    @unique
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  rssFeedUrl   String
  lastSyncedAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model GoodreadsBook {
  id                 String    @id @default(uuid())
  userId             String
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  goodreadsBookId    String
  title              String
  author             String
  additionalAuthors  String?
  isbn               String?
  isbn13             String?
  userRating         Int? // 0-5
  averageRating      Float?
  dateRead           DateTime? // Most recent read date (for backward compatibility)
  readDates          String? // JSON array of all read dates
  dateAdded          DateTime?
  shelves            String? // JSON array of shelf names
  reviewText         String?
  spoiler            Boolean   @default(false)
  privateNotes       String?
  pages              Int?
  yearPublished      Int?
  readCount          Int       @default(1)
  imageUrl           String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  @@unique([userId, goodreadsBookId])
  @@index([userId])
  @@index([goodreadsBookId])
}
