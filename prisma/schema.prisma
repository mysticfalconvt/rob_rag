generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Authentication models
model AuthUser {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  passwordHash String
  role         String   @default("user") // "admin" | "user"
  isActive     Boolean  @default(true)

  // User-specific profile settings (moved from Settings model)
  userName        String? // Profile name for chat context (different from account name)
  userBio         String? // Background, interests, role, etc.
  userPreferences String? // JSON object for other preferences

  // Relations
  conversations Conversation[]
  uploadedFiles IndexedFile[]
  sessions      Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?  // Admin who created this user

  @@index([email])
  @@index([role])
}

model Session {
  id         String   @id @default(uuid())
  userId     String
  user       AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  token      String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  lastActive DateTime @default(now())
  ipAddress  String?
  userAgent  String?

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

model IndexedFile {
  id           String   @id @default(uuid())
  filePath     String   @unique
  fileHash     String
  lastModified DateTime
  lastIndexed  DateTime @default(now())
  chunkCount   Int
  status       String   @default("indexed") // indexed, pending, error

  // Source tracking
  source String @default("local") // "local" | "paperless"

  // File ownership tracking (for deletion permissions)
  uploadedBy String?   // Nullable for existing files and synced sources
  uploader   AuthUser? @relation(fields: [uploadedBy], references: [id], onDelete: SetNull)

  // Paperless-ngx specific fields
  paperlessId            Int?
  paperlessTitle         String?
  paperlessTags          String? // JSON array of tags
  paperlessCorrespondent String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([uploadedBy])
  @@index([source])
}

model Conversation {
  id        String    @id @default(uuid())
  userId    String
  user      AuthUser  @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  topics    String?   // JSON array of conversation topics
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]

  @@index([userId])
  @@index([createdAt])
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String // 'user' | 'assistant'
  content        String
  sources        String? // JSON string of sources
  createdAt      DateTime     @default(now())

  @@index([conversationId])
}

model Settings {
  id                      String @id @default("singleton")
  embeddingModel          String
  chatModel               String
  embeddingModelDimension Int    @default(1024)

  // Paperless-ngx Configuration
  paperlessUrl         String?
  paperlessExternalUrl String? // Optional external URL for browser links
  paperlessApiToken    String?
  paperlessEnabled     Boolean @default(false)

  // Customizable Prompts
  ragSystemPrompt          String?
  noSourcesSystemPrompt    String?
  titleGenerationPrompt    String?

  // NOTE: User profile fields (userName, userBio, userPreferences) moved to AuthUser model

  // Context Window Management
  maxContextTokens      Int     @default(8000) // Maximum tokens to use for context
  contextStrategy       String  @default("smart") // "sliding" | "token" | "smart"
  slidingWindowSize     Int     @default(10) // Number of recent messages to keep
  enableContextSummary  Boolean @default(true) // Whether to summarize old messages

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Goodreads integration models (renamed from "User" to avoid confusion with AuthUser)
model GoodreadsUser {
  id        String   @id @default(uuid())
  name      String
  email     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  goodreadsSources GoodreadsSource[]
  goodreadsBooks   GoodreadsBook[]

  @@index([email])
}

model GoodreadsSource {
  id           String        @id @default(uuid())
  userId       String        @unique
  user         GoodreadsUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  rssFeedUrl   String
  lastSyncedAt DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([userId])
}

model GoodreadsBook {
  id                 String        @id @default(uuid())
  userId             String
  user               GoodreadsUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  goodreadsBookId    String
  title              String
  author             String
  additionalAuthors  String?
  isbn               String?
  isbn13             String?
  userRating         Int?          // 0-5
  averageRating      Float?
  dateRead           DateTime?     // Most recent read date (for backward compatibility)
  readDates          String?       // JSON array of all read dates
  dateAdded          DateTime?
  shelves            String?       // JSON array of shelf names
  reviewText         String?
  spoiler            Boolean       @default(false)
  privateNotes       String?
  pages              Int?
  yearPublished      Int?
  readCount          Int           @default(1)
  imageUrl           String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  @@unique([userId, goodreadsBookId])
  @@index([userId])
  @@index([goodreadsBookId])
}
